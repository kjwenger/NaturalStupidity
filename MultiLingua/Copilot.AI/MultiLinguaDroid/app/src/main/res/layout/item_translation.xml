<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- English -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_english"
            android:inputType="text"
            android:importantForAutofill="no" />

        <!-- French -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/french"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnTranslateFrench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <EditText
            android:id="@+id/etFrench"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/french_translation"
            android:inputType="text"
            android:importantForAutofill="no" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llFrenchOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- Italian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/italian"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnTranslateItalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <EditText
            android:id="@+id/etItalian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/italian_translation"
            android:inputType="text"
            android:importantForAutofill="no" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llItalianOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- Spanish -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/spanish"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnTranslateSpanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <EditText
            android:id="@+id/etSpanish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/spanish_translation"
            android:inputType="text"
            android:importantForAutofill="no" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llSpanishOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="@string/delete"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@android:color/holo_red_dark"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
